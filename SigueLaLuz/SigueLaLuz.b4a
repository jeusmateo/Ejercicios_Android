Private Sub mainTimer_Tick
	If time > lightsList.Size Then
		timer.Enabled = False
		Return
	End If
	
	Log("Tiempo: " & time)
	
	
	If time < lightsList.Size And (time Mod 2) == 0 Then
		pnlMain.GetView(lightsList.Get(time)).Color = Colors.Yellow
		Log("Luz encendida: " & lightsList.Get(time))
	End If
	
	If time Mod 2 == 1 Then
		pnlMain.GetView(lightsList.Get(time - 1)).Color = Colors.LightGray
	End If
	
