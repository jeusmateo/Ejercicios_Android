Private Sub btnJugar_Click
	Dim level As Byte = 1
	time = 0
	timer.Initialize("mainTimer", 500)
	
	lightsList = tools.GenerateRandomPlaces(level, pnlMain.NumberOfViews - 1)
	tools.MessageLogger(lightsList)
	
	timer.Enabled = True

End Sub




