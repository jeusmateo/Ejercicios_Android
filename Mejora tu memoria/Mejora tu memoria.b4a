End Sub

private Sub Clamp(minimum As Double, maximum As Double, value As Double) As Double
	Return Max(minimum, Min(maximum, value))
End Sub

Private Sub NuevoJuego
	pnlMain.Visible = True
	contadorNivel = 1
	aciertoS = 0
	errores = 0
	
	
	For Each b4xView As B4XView In pnlAciertos
		b4xView.Visible = False
	Next
	
	For Each b4xView As B4XView In pnlErrores
		b4xView.Visible = False
	Next

	GenerarRandom
	
End Sub



Private Sub GenerarRandom
	numRandom = ""
	
	For i = 1 To contadorNivel + 2
		numRandom = numRandom & Rnd(0, 10)
	Next

	time = Floor((3.5 * Logarithm(contadorNivel, 8) + 1.5) * 1000)
	Log(time)
	
	lblNum.Text = numRandom
	txtNum.Visible = False
	bntEnviar.Visible = False
	
	Log(numRandom)
	Sleep(time + 500)
	
	lblNum.Text = ""
	bntEnviar.Visible = True
	txtNum.Visible = True
	txtNum.Text = ""
	txtNum.RequestFocus
	lblNivel.Text = "Nivel" & CRLF & contadorNivel

End Sub


Private Sub Acierto
	pnlAciertos.GetView(aciertoS ).As(B4XView).Visible = True
	aciertoSfx.Play
	aciertoS = aciertoS + 1
	Log("Aciertos: " & aciertoS)
		
	If aciertoS == 5 Then 'CAMBIARLO A 5 TEST ONLY

		contadorNivel = contadorNivel + 1
		If contadorNivel > 8 Then
			MsgboxAsync("Tienes una excelente memoria 😮", "Mensaje")
			GameOver
			Return
		End If
		lblNivel.Text = "Nivel" & CRLF & contadorNivel
		aciertoS = 0
		errores = 0
		For Each b4xView As B4XView In pnlErrores
			b4xView.Visible = False
		Next
		
		For Each b4xView As B4XView In pnlAciertos
			b4xView.Visible = False
		Next
		
		ToastMessageShow(" ¡Aumentas de nivel !", False)
		nivelSfx.Play
		Return
		
	End If
	
	ToastMessageShow("✨🥳Correcto 🥳✨", False)
End Sub


Private Sub Error
	pnlErrores.GetView(errores).As(B4XView).Visible = True
	
	errores = errores + 1
	aciertoS = 0
	lblNivel.Text = "Nivel" & CRLF & contadorNivel
	
	For Each b4xView As B4XView In pnlAciertos
		b4xView.Visible = False
	Next
	
		
	Log("Errores: " & errores)
	
	If errores = 3 Then
'		GameOver
'		Msgbox("Has quemado tus intentos", "❌ Game Over ❌")
		contadorNivel = Clamp(1, 10, contadorNivel - 1)

		If contadorNivel > 1 Then 		
			ToastMessageShow("⚠ Bajas de nivel ⚠" , False)
		End If
		gameOverSfx.Play
		
		errores = 0
		For Each b4xView As B4XView In pnlErrores
			b4xView.Visible = False
		Next
		Return
	End If
		
	ToastMessageShow("Incorrecto 😕👎", False)
	errorSfx.Play

End Sub

Private Sub GameOver
	txtNum.Text = ""
	lblNivel.Text = ""
	lblNum.Text = ""
	gameOverSfx.Play
	pnlMain.Visible = False
	btnIniciar.Visible = True
End Sub


Private Sub ChecarNumero (userInput As String)
	If userInput == numRandom Then
		Acierto
	Else
		Error
	End If

	GenerarRandom
	
End Sub



Private Sub bntEnviar_Click
	
	If txtNum.Text == "" Then 
		ToastMessageShow("⚠ Digite un numero ⚠", False)
		Return
	End If
	
	ChecarNumero(txtNum.Text)
End Sub

Private Sub btnIniciar_Click
	NuevoJuego
	Sender.As(Button).Visible = False
End Sub