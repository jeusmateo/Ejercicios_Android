	Private lblNum As Label
	Private lblNivel As Label
	Private bntEnviar As Button
	Private btnIniciar As Button
	
	' Variables
	Private contadorNivel, aciertoS, errores As Byte
	Private time As Int
	Private numRandom As String
	
End Sub

Sub Activity_Create(FirstTime As Boolean)
	Activity.LoadLayout("Layout")
	pnlMain.Visible = False
	
	aciertoSfx.Initialize2("aciertosSfx")
	aciertoSfx.Load(File.DirAssets, "completetask_0.mp3")
	nivelSfx.Initialize2("nivelSfx")
	nivelSfx.Load(File.DirAssets, "gmae.wav")
	errorSfx.Initialize2("errorSfx")
	errorSfx.Load(File.DirAssets, "#3.wav")	
	gameOverSfx.Initialize2("gameoverSfx")
	gameOverSfx.Load(File.DirAssets, "game_over_bad_chest.wav")
	
End Sub

