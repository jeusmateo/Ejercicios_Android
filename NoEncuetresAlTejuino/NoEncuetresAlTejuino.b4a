Private Sub Timer_Tick
	Panel2.GetView(r1).SetBackgroundImage(LoadBitmap(File.DirAssets, "TejuinoBueno.png"))
	Panel2.GetView(r2).SetBackgroundImage(LoadBitmap(File.DirAssets, "TejuinoBueno.png"))
