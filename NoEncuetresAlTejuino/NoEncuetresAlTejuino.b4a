	Panel2.GetView(r5).SetBackgroundImage(LoadBitmap(File.DirAssets, "TejuinoBueno.png"))
	
	Panel2.GetView(m1).SetBackgroundImage(LoadBitmap(File.DirAssets, "TejuinoMalo.png"))
	Panel2.GetView(m2).SetBackgroundImage(LoadBitmap(File.DirAssets, "TejuinoMalo.png"))
	
	
End Sub

Private Sub ViewEnabled(bool As Boolean)
	For Each button As Button In Panel1
		button.Enabled = bool
	Next
	
	For Each imgView As ImageView In Panel2
		imgView.Visible = bool
	Next
	
End Sub

